<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

    <ImageView
            android:id="@+id/imageViewVideo"
            android:layout_width="200dp"
            android:layout_height="98dp"/>

    <TextView
            android:id="@+id/textViewCityName"
            android:layout_width="126dp"
            android:layout_height="98dp"
            android:textColor="@color/colorText"
            android:layout_marginBottom="0dp"
            android:text="Palacio de ValdebÃ¡rranos"
            android:gravity="top"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <View
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:background="#3000" android:id="@+id/view"
            card_view:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="36dp"
            card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp"
            android:visibility="gone"/>

    <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="56dp"
            android:layout_height="41dp"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"

            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"
            android:visibility="gone"/>


</RelativeLayout>

