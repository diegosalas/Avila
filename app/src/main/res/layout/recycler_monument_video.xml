<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

    <ImageView
            android:id="@+id/imageViewVideo"
            android:layout_width="153dp"
            android:layout_height="117dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" android:visibility="visible"/>
    <ImageView
            android:layout_width="93dp"
            android:layout_height="87dp" card_view:srcCompat="@drawable/ic_video_play"
            android:id="@+id/imageViewPlay"
            card_view:layout_constraintTop_toTopOf="@+id/imageViewVideo"
            card_view:layout_constraintStart_toStartOf="@+id/imageViewVideo"
            card_view:layout_constraintEnd_toEndOf="@+id/imageViewVideo" android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageViewVideo" android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>

