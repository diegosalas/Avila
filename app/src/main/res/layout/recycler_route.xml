<?xml version="1.0" encoding="utf-8"?>



        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="189dp"
                android:layout_height="296dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/constraintLayout10" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                tools:context=".fragments.RutasyMonumentosFragment"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

            <TextView
                    android:text="@string/ruta_downavila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTitleRoute" android:textStyle="bold"
                    android:textSize="18sp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/imgRoute"
            />
            <ImageView
                    android:src="@drawable/img_muralla_inicial"
                    android:layout_width="140dp"
                    android:layout_height="107dp"
                    android:id="@+id/imgRoute" android:scaleType="fitXY" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleRoute"
            />
            <TextView
                    android:text="30' a pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textDuration" app:layout_constraintStart_toStartOf="@+id/imgRoute"
                    app:layout_constraintTop_toBottomOf="@+id/imgRoute"
                    android:layout_marginTop="8dp"/>
            <ImageView
                    android:src="@drawable/relog"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView3"
                    app:layout_constraintStart_toEndOf="@+id/textDuration" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgRoute"/>
    <TextView
            android:text="Ruta escogida por los integrantes de la fundación DownÁvila"
            android:layout_width="132dp"
            android:layout_height="58dp"
            android:id="@+id/textDescription" android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/imgRoute"
            android:layout_marginStart="8dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
            <View
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:background="#3000" android:id="@+id/view"
                    android:layout_marginEnd="36dp"
                    android:layout_marginTop="60dp"
                    android:visibility="gone" tools:ignore="MissingConstraints"/>

            <ImageButton
                    android:id="@+id/buttonDelete"
                    android:layout_width="56dp"
                    android:layout_height="41dp"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="36dp"
                    android:visibility="gone" tools:ignore="MissingConstraints"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


