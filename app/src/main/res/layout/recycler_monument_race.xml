<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

    <ImageView
            android:id="@+id/imageViewVideo"
            android:layout_width="0dp"
            android:visibility="visible"
            android:layout_height="217dp" android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toBottomOf="@+id/textViewCityName" android:layout_marginEnd="24dp"
            card_view:layout_constraintEnd_toEndOf="parent" card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/colorText"
            android:id="@+id/verticalLinePermanent"
            card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            card_view:layout_constraintBottom_toTopOf="@+id/verticalLineHideable"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:id="@+id/textViewCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/colorRace"
            android:text="1. Palacio de ValdebÃ¡rranos"
            android:gravity="top"
            android:textSize="18sp"
            card_view:layout_constraintTop_toTopOf="parent" card_view:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"/>

    <View
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:background="#3000" android:id="@+id/view"
            card_view:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="36dp"
            card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp"
            android:visibility="gone"/>

    <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="56dp"
            android:layout_height="41dp"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"

            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"
            android:visibility="gone"/>
    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp" card_view:srcCompat="@drawable/ic_circle"
            android:id="@+id/imageView"
            card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            card_view:layout_constraintTop_toTopOf="parent"/>

    <View
            android:layout_width="1dp"
            android:layout_height="221dp"
            android:visibility="visible"
            android:background="@color/colorText"
            android:id="@+id/verticalLineHideable"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView"
            card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/imageViewVideo"/>


</androidx.constraintlayout.widget.ConstraintLayout>

